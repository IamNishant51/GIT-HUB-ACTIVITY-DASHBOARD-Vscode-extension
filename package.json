  {
  "name": "github-activity-dashboard",
  "displayName": "GitHub Activity Dashboard",
  "description": "A dashboard to track your GitHub activity.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "github-dashboard-container",
          "title": "GitHub Dashboard",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "github-dashboard-container": [
        {
          "id": "github-activity-dashboard",
          "name": "Activity",
          "icon": "resources/icon.svg"
        },
        {
          "id": "github-repositories",
          "name": "Repositories",
          "icon": "resources/icon.svg"
        },
        {
          "id": "github-history",
          "name": "History",
          "icon": "resources/icon.svg"
        },
        {
          "id": "github-stars",
          "name": "Starred Repos",
          "icon": "resources/icon.svg"
        },
        {
          "id": "github-notifications",
          "name": "Notifications",
          "icon": "resources/icon.svg"
        },
        {
          "id": "github-profile",
          "name": "Profile",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "github-activity-dashboard.refresh",
        "title": "Refresh GitHub Activity",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "github-activity-dashboard.createIssue",
        "title": "Create New Issue",
        "icon": "$(issues)"
      },
      {
        "command": "github-activity-dashboard.searchRepos",
        "title": "Search GitHub Repositories",
        "icon": "$(search)"
      },
      {
        "command": "github-activity-dashboard.unstarRepo",
        "title": "Unstar Repository",
        "icon": "$(star-empty)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.44.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.3",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.1",
    "simple-git": "^3.28.0"
  }
}
